{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug C Program",
        "type": "cppdbg",
        "request": "launch",
        "program": "/workspace/hello",  // Path to the executable inside the container
        "args": ["small_bunny_1080p_60fps.mp4"],                      // Optional: Arguments to pass to your program
        "stopAtEntry": false,            // Set to true if you want to stop at the first line of the program
        "cwd": "/workspace",             // Working directory
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",                 // Use gdb as the debugger
        "miDebuggerPath": "/usr/bin/gdb", // Path to gdb inside the container
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "",             // You can define a pre-launch build task if needed
        "miDebuggerArgs": "",
        "logging": {
          "trace": true,
          "traceResponse": true
        },
        "internalConsoleOptions": "openOnSessionStart"
      }
    ]
  }
  